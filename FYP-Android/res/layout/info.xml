<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="fill_parent">
    <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout1" android:layout_height="40dip">
        <Spinner android:layout_weight="1" android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/info_spinner" android:prompt="@string/info_spinner_prompt"></Spinner>
    </LinearLayout>
    <WebView android:id="@+id/webView" android:layout_width="fill_parent" android:layout_height="fill_parent"/>
    
</LinearLayout>
